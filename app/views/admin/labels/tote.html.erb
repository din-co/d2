<% @orders.in_groups_of(5, false) do |group| %>
  <div class="letter-sheet letter-sheet-ol1159wx">

    <% group.each do |order| %>
      <% tote_tags = order.tote_tags %>
      <% tote_tags.each_with_index do |tag, index| %>
        <div class="label tote-label">
          <div class="printable-area">
            <% if tote_tags.size > 1 %>
              <p>
                <strong>Tote <%= index + 1 %> of <%= tote_tags.size %></strong>
              </p>
            <% end -%>
            <div class="member-name"><%= tag.name %></div>
            <div class="member-address">
              <div>
                <span class="address-street type-nowrap"><%= tag.address1 %><%= "," if tag.address2 %></span>
                <% if tag.address2 %><span class="address-apt type-nowrap"><%= tag.address2 %></span><% end -%>
              </div>
              <span class="type-nowrap"><%= tag.city %>,</span>
              <span class="type-nowrap"><%= tag.state %></span>
              <span class="address-zip type-nowrap"><%= tag.zipcode %></span>
            </div>
            <div class="member-phone">☎︎ <%= number_to_phone(tag.phone) %></div>
            <div class="member-delivery-window">
              <strong><%= tag.delivery_window.to_s %> delivery</strong>
            </div>
            <% if tag.instructions %><div class="member-delivery-instructions"><%= tag.instructions %></div><% end -%>
            <% if tag.packing_list.any? %>
              <table class="order-table">
                <% tag.packing_list.each do |item| %>
                  <tr>
                    <td class="order-quantity"><%= item.quantity %></td>
                    <td>
                      <%= item.name %>
                      <div class="small bold">
                        <span class="type-nowrap"><%= item.chef.name %>,</span>
                        <span class="type-nowrap"><%= item.restaurant.name %></span>
                      </div>
                    </td>
                  </tr>
                <% end -%>
              </table>
            <% end -%>
            <footer class="small">
              <div class="order-id">
                <%= order.number %>
              </div>
            </footer>
          </div>
        </div>

      <% end -%>
    <% end -%>

  </div>
<% end -%>
