<script>
  $(function() {
    $(".add-product-form")
      .submit(function() {
        var metadata = productMetadata($(this));
        track({name: 'added product', metadata: metadata});
        trackAmplitude({name: 'Purchase Intent - Added product', metadata: metadata});
      })
      .waypoint({
        offset: 'bottom-in-view',
        continuous: false,
        handler: function(direction) {
          if (direction == "down") {
            var metadata = productMetadata($(this.element));
            trackAmplitude({name: "Purchase Intent - Purchase button in view", metadata: metadata});
          }
        }
      });
    $(".add-product-form button").mouseenter(function() {
      var metadata = productMetadata($(this).parents(".add-product-form"));
      trackAmplitude({name: "Purchase Intent - Moused over purchase button", metadata: metadata});
    });
  });
</script>
