<% content_for :head do %>
  <script type="text/javascript">
    var metadata = {
      cart_total: <%= @order.total.to_f %>,
      item_count: <%= @order.item_count %>
    }
    track({name: "visited checkout step sign up", metadata: metadata});
  </script>
<% end -%>

<div class="container container--main">
  <h1 class="hr-header"><%= Spree.t(:create_account) %></h1>
  <%= form_for @user, :as => :spree_user, :url => spree.registration_path(@user), html: {class: "form-container form--margin-bottom"} do |f| %>
    <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
    <div class="form-footer">
	<%= f.submit Spree.t(:create_account), :class => 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <p class="text-center">Already have a Din account? <%= link_to Spree.t(:login), spree.login_path %></p>
</div>
