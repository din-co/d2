<% @body_id = 'product-details' %>
<% @show_kitchen_status = true %>
<% cache [I18n.locale, current_currency, @product] do %>
  <div itemscope itemtype="http://schema.org/Product">
    <div class="container container__product">

      <div class="product">
        <%= image_tag @product.display_image.attachment(:detail), itemprop: "image", class: "product-image" %>

        <h1 class="product__name text-center--on-mobile" itemprop="name">
          <%= @product.name %>
        </h1>
        <% if @product.property('tagline').present? %>
          <div class="product__tagline grey-link"><%= @product.property('tagline') %></div>
        <% end -%>
        <h4 class="product__restaurant-name">
          <%= [@product.chef.try(:name), @product.restaurant.try(:name)].compact.join(', ') %>
        </h4>

        <div class="product__add-form">
          <%= render :partial => 'spree/shared/order_form_product', :locals => { :product => @product } %>
        </div>
      </div>

      <% if product_description(@product).present? %>
        <p><%= product_description(@product) %></p>
      <% end -%>

    </div>

    <div class="bg-tan">
      <div class="container">
        <p class="text-center product__meta">
          <% if @product.property('time-minutes').present? %>
            <span><%= @product.property('time-minutes') %> minutes</span>
          <% end -%>
          <% if @product.diets.present? %>
            <span class="text-separator"></span>
            <span><%= @product.diets.map(&:name).join(", ") %></span>
          <% end -%>
        </p>
      </div>
    </div>

    <div class="container container--main">

      <div class="row">
        <% if @product.property('components').present? %>
          <div class="col-sm-6">
            <h2>In the Bag</h2>
            <ul class="dish-components">
              <%= @product.property('components').html_safe %>
            </ul>
          </div>
        <% end -%>

        <div class="col-sm-6">
          <% if @product.pantry.present? or @product.equipment.present? %>
            <h2>From your Kitchen</h2>
          <% end -%>

          <% if @product.pantry.present? %>
            <h5>Pantry</h5>
            <ul><li><%= @product.pantry.map(&:name).join("</li><li>").html_safe %></li></ul>
          <% end -%>

          <% if @product.equipment.present? %>
            <h5>Equipment</h5>
            <ul><li><%= @product.equipment.map(&:name).join("</li><li>").html_safe %></li></ul>
          <% end -%>
        </div>
      </div>

      <% if @product.property('directions').present? %>
        <div class="product__directions">
          <h2>Directions</h2>
          <% if @product.property('time-minutes').present? %>
            <p><em>This meal should take about <strong><%= @product.property('time-minutes') %> minutes</strong> to prepare.</em></p>
          <% end -%>
          <ol class="dish-directions">
            <%= @product.property('directions').html_safe %>
          </ol>
        </div>
      <% end -%>

      <% if @product.property('ingredients').present? %>
        <p class="dish-ingredients small">
          <strong>Ingredients:</strong>
          <%= @product.property('ingredients').html_safe %>
        </p>
      <% end -%>

      <% if @product.allergens.present? %>
        <p class="small">
          <strong>Contains:</strong>
          <%= @product.allergens.map(&:name).join(", ") %>.
        </p>
      <% end -%>

      <p class="small"><em>Food Allergy Notice: Our meals are prepared in restaurant kitchens that may contain tree nuts, peanuts, fish, shellfish, dairy, soy, eggs, and wheat. Though best practices are used when preparing the meal, inadvertent cross-contamination may occur. We cannot guarantee the complete absence of allergens.</em></p>

