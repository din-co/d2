<% content_for :head do %>
  <script type="text/javascript">
    var metadata = {}
    <% if simple_current_order %>
      metadata.item_count = <%= simple_current_order.item_count %>
      metadata.cart_total = <%= simple_current_order.total.to_f %>
    <% end -%>
    track({name: "visited forgot password", metadata: metadata});
  </script>
<% end -%>

<div class="bg-tan">
  <div class="container container--main">
    <h1 class="hr-header"><%= Spree.t(:password_reset) %></h1>
    <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path, html: {class: "form-container"} do |f| %>
      <div class="form-group">
        <%= f.label :email, Spree.t(:email) %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-footer">
        <%= f.submit Spree.t(:send_link_to_reset_password), :class => 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
